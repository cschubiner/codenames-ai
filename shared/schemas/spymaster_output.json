{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpymasterOutput",
  "description": "Structured output from the spymaster LLM for candidate clue generation",
  "type": "object",
  "required": ["candidates"],
  "additionalProperties": false,
  "properties": {
    "candidates": {
      "type": "array",
      "description": "List of candidate clues",
      "items": {
        "type": "object",
        "required": ["reasoning", "clue", "risk_assessment", "intended_targets", "number"],
        "additionalProperties": false,
        "properties": {
          "reasoning": {
            "type": "string",
            "description": "Explanation of why this clue connects the targets"
          },
          "clue": {
            "type": "string",
            "description": "The one-word clue to give",
            "pattern": "^[A-Za-z]+$"
          },
          "risk_assessment": {
            "type": "string",
            "description": "Assessment of potential confusion with opponent/assassin words"
          },
          "intended_targets": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "The specific board words this clue is meant to hint at"
          },
          "number": {
            "type": "integer",
            "minimum": 1,
            "maximum": 9,
            "description": "Number of words this clue relates to"
          }
        }
      }
    }
  }
}
